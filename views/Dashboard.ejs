                </div> -->
                <button class="btn btn-primary w-100 py-2" type="submit" fdprocessedid="yz3meh">Create Meeting</button>
            </form>
        </main>
        <!-- 2nd waala card -->
        <main class="form-signin container d-flex justify-content-center align-items-center">
            <form method="post" action="/joinmeeting">

                <h1 class="h3 mb-3 fw-normal">Join Meeting</h1>

                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com"
                        fdprocessedid="ceityx" name="roomcode">
                    <label for="floatingInput">Room Code</label>
                </div>
                <!-- <div class="form-floating">
